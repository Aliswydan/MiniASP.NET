@page
@model HomeWork5.Pages.VeiwAllCVModel
@{
    ViewData["Title"] = "Veiw CV";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="text-primary">
            <h1>Your CV</h1>
        </div>
        <div class="col-6">
            <a asp-page="/CreateCV" class="btn btn-primary">Create your CV</a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-striped table-bordered">
       
            
        
        @if (Model.cvs != null)
        {


            <thead>

                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>skills</th>
                    <th>sex</th>
                    <th>Nationality</th>
                    <th>Photo</th>
                    <th>Birthday</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var cv in Model.cvs)
                {
                    <tr>
                        <td>@cv.FirstName</td>
                    <td>@cv.LastName</td>
                    <td>@cv.Email</td>
                    <td>@cv.Skills</td>
                    <td>@cv.Sex</td>
                    <td>@cv.Nationality</td>
                    <td>@cv.Photo</td>
                    <td>@cv.Birthday.ToShortDateString()</td>

                </tr>
                }

            </tbody>
        }
        else
        {
            <tr>
                <td>No CV found By This Id</td>
            </tr>
        }
    </table>
</div>
